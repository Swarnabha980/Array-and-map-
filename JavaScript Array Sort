<!DOCTYPE html>
<html>
     <body>
        <h2>JavaScript Array Sort</h2>
        <P>Click the button to the array in ascending order</P>
        <button onclick="ascending()">Ascending Order</button>
        <button onclick="descending()">Descending Order</button>
        <p id="result"></p>
        <script>
            var point = [40,100,1,5,25,10];
            document.getElementById("result").innerHTML = points;
            function ascending() {
                point.sort(function (a, b){return a - b});
                document.getElementById("result").innerHTML = points;
            }
            function descending() {
                point.sort(function (a, b){return - a});
                document.getElementById("result").innerHTML = points;
            }
        </script>
     </body>
</html>